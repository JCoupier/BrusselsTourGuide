<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/LocationAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Customised splash screen. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- App bar style -->
    <style name="LocationAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for a tab that displays a location name -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_width</item>
        <item name="tabMinWidth">@dimen/tab_width</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>

    <!-- Text appearance style for a location tab -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <!-- Text appearance style for a location name -->
    <style name="LocationNameTextAppearance">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
    </style>

    <!-- Text appearance style for a location address -->
    <style name="LocationAddressTextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
    </style>

    <!-- Text appearance style for a location name in the details activity -->
    <style name="DetailsLocationNameTextAppearance">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <!-- Text appearance style for a location address in the details activity -->
    <style name="DetailsLocationAddressTextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_location_textview</item>
    </style>

    <!-- Text appearance style for a location description in the details activity -->
    <style name="DetailsLocationDescriptionTextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">@dimen/padding_location_textview</item>
        <item name="android:paddingLeft">@dimen/padding_location_textview</item>
        <item name="android:paddingRight">@dimen/padding_location_textview</item>
    </style>

</resources>
